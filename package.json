{
  "name": "mcp-job-matcher",
  "version": "1.0.0",
  "description": "MCP server for job matching with Markdown artifact responses",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js --dev",
    "http": "node start-http.js",
    "http:dev": "node start-http.js --dev",
    "deploy": "wrangler deploy",
    "cf:dev": "wrangler dev",
    "cf:tail": "wrangler tail",
    "validate-security": "node validate-security.js",
    "predeploy": "npm run validate-security"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "file-type": "^19.0.0",
    "form-data": "^4.0.0",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "wrangler": "^3.114.10"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "job-matching",
    "resume",
    "claude-desktop",
    "markdown-artifacts",
    "artifacts"
  ],
  "author": "Job Matcher MCP Server",
  "license": "MIT"
}
